@model Item

<h2>Edit Item</h2>

<form method="post">
    <div class="form-group">
        <label for="itemName">Item Name:</label>
        <input type="text" class="form-control" id="itemName" name="Name" value="@Model.Name" />
    </div>
    <div class="form-group">
        <label for="itemPrice">Item Price:</label>
        <input type="text" class="form-control" id="itemPrice" name="Price" value="@Model.Price" />
    </div>
    <input type="hidden" name="Id" value="@Model.Id" />
    <button type="submit" class="btn btn-primary">Edit Item</button>
</form>
